{
    "compilerOptions": {
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "allowJs": true,
      "paths": {
        "*": ["node_modules/*"]
      }
    },
    "include": ["src/**/*", "src/configs/*.json", "src/swagger/*.json"],
    "exclude": ["node_modules", "tests", "dist"]
}
  